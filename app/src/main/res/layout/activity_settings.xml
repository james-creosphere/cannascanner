<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Airtable Integration"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configure automatic upload of audit data to Airtable."
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switchEnabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Airtable Upload"
            android:textSize="16sp"
            android:padding="8dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="API Key (Personal Access Token)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etApiKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="pat..."
            android:inputType="textPassword"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Base ID"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etBaseId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="app..."
            android:inputType="text"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Table Name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etTableName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Scans"
            android:inputType="text"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Required Airtable Columns:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Timestamp (Single line text)\n• Barcode (Single line text)\n• Room (Single line text)\n• Auditor (Single line text)\n• AuditType (Single line text)\n• Weight (Number, optional)"
            android:textSize="13sp"
            android:textColor="#666666"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Settings"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Connection"
            android:textSize="16sp"
            android:padding="12dp"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>

</ScrollView>
